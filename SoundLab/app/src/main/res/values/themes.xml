<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SoundLab" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="android:colorAccent">@color/pink</item>
        <item name="android:colorBackground">@color/dark_purple</item>
        <item name="android:statusBarColor">@color/dark_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Intro.Theme.SoundLab" parent="Base.Theme.SoundLab">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorSecondary">@color/dark_purple</item>
        <item name="android:colorBackground">@color/purple</item>
        <item name="android:statusBarColor">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Splash.Theme.SoundLab" parent="Theme.Design.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>