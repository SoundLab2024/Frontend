<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:paddingTop="24dp"
    android:scrollbars="none"
    tools:context="view.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayout_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:textSize="42sp"
                android:textStyle="bold" />

            <view.CustomButton
                android:id="@+id/settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center|end"
                android:background="@drawable/setting"
                android:contentDescription="@string/settings"
                android:scaleX="0.5"
                android:scaleY="0.5" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/recently_listened"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <view.CustomCardView
                    android:id="@+id/music_cardView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/trasparent"
                    app:cardElevation="0dp"
                    android:clickable="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/music_image1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/cover_default"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:singleLine="true"
                            android:text="@string/default_title"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/music_image1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </view.CustomCardView>

                <view.CustomCardView
                    android:id="@+id/music_cardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/trasparent"
                    app:cardElevation="0dp"
                    android:clickable="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/music_image2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/cover_default"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:singleLine="true"
                            android:text="@string/default_title"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/music_image2" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </view.CustomCardView>

                <view.CustomCardView
                    android:id="@+id/music_cardView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/trasparent"
                    app:cardElevation="0dp"
                    android:clickable="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/music_image3"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/cover_default"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:singleLine="true"
                            android:text="@string/default_title"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/music_image3" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </view.CustomCardView>


            </LinearLayout>
        </HorizontalScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/genres"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <view.CustomButton
                    android:id="@+id/genre1"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_buttons_genres"
                    android:backgroundTint="#944DD3"
                    android:singleLine="true"
                    android:text="@string/genre"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <view.CustomButton
                    android:id="@+id/genre2"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_buttons_genres"
                    android:backgroundTint="#4243D4"
                    android:singleLine="true"
                    android:text="@string/genre"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

                <view.CustomButton
                    android:id="@+id/genre3"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_buttons_genres"
                    android:backgroundTint="#51517F"
                    android:singleLine="true"
                    android:text="@string/genre"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </HorizontalScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/favourite_playlist"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <view.CustomCardView
                    android:id="@+id/playlist_cardView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/trasparent"
                    app:cardElevation="0dp"
                    android:clickable="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/playlist_image1"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/playlist_default"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/playlist_text1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:singleLine="true"
                            android:text="@string/playlist"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/playlist_image1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </view.CustomCardView>


                <view.CustomCardView
                    android:id="@+id/playlist_cardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/trasparent"
                    app:cardElevation="0dp"
                    android:clickable="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/playlist_image2"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/playlist_default"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/playlist_text2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:singleLine="true"
                            android:text="@string/playlist"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/playlist_image2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </view.CustomCardView>

                <view.CustomCardView
                    android:id="@+id/playlist_cardView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/trasparent"
                    app:cardElevation="0dp"
                    android:clickable="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/playlist_image3"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/playlist_default"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/playlist_text3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:singleLine="true"
                            android:text="@string/playlist"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/playlist_image3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </view.CustomCardView>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>