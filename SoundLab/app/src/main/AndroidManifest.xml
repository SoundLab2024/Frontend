<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.SoundLab"
        tools:targetApi="31"
        android:screenOrientation="portrait">

        <service android:name="com.soundlab.app.service.PlayerService"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:foregroundServiceType="mediaPlayback"
            android:exported="false"/>
        <activity
            android:name="com.soundlab.app.view.activity.ChangePasswordActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.soundlab.app.view.activity.ChangeEmailActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.soundlab.app.view.activity.SettingsActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.soundlab.app.view.activity.RegistrationActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Intro.Theme.SoundLab" />
        <activity
            android:name="com.soundlab.app.view.activity.SlideActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Intro.Theme.SoundLab" />
        <activity
            android:name="com.soundlab.app.view.activity.LoginActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Intro.Theme.SoundLab" />
        <activity
            android:name="com.soundlab.app.view.activity.SplashActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Splash.Theme.SoundLab">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.soundlab.app.view.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>